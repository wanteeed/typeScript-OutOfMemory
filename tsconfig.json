{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "commonjs",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "declaration": true,
    "strict": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "allowJs": true
  },
  "include": [
    "src/**/*",
  ],
}
